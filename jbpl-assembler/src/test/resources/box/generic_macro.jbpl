// Simple generic macro
macro simple_test[T : any](value: T, expected_type: type) {
    assert typeof(value) == expected_type
}

simple_test[string]("Hello, World!", type string)
simple_test[i32](100, type i32)
simple_test[i8](100i8, type i8)
simple_test[bool](true, type bool)