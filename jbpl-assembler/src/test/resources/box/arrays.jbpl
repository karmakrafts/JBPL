// Array subscript reference
private define my_array: [string] = []{"Hello", "World!"}
private define value: string = ""

for(i in 0..<sizeof(my_array)) {
    value += my_array[i]
    if(i < (sizeof(my_array) - 1)) {
        value += ", "
    }
}

assert value == "Hello, World!"

// Array subscript assignment
my_array[0] = "HELLOU"
value = ""

for(i in 0..<sizeof(my_array)) {
    value += my_array[i]
    if(i < (sizeof(my_array) - 1)) {
        value += ", "
    }
}

assert value == "HELLOU, World!"

// Array subscript slicing
define sub_array: [string] = my_array[1..<2]
assert sub_array[0] == "World!"

define sub_array2: [string] = my_array[0..<1]
assert sub_array2[0] == "HELLOU"