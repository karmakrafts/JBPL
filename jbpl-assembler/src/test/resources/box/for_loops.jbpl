// Numeric ranges

private define index: i32 = 0

for(i in 0..<100) {
    index++
}

assert index == 100
index = 0

for(i in 0..100) {
    index++
}

assert index == 101

// Character ranges

private define buffer: string = ""

for(c in 'a'..<'z') {
    buffer += c
}

assert buffer == "abcdefghijklmnopqrstuvwxy"
buffer = ""

for(c in 'a'..'z') {
    buffer += c
}

assert buffer == "abcdefghijklmnopqrstuvwxyz"

private define buffer2: string = ""

for(c in buffer) {
    buffer2 += c
}

assert buffer2 == buffer

// Nested loops

index = 0

for(x in 0..<10) {
    for(y in 0..<10) {
        index++
    }
}

assert index == 100