<idea-plugin>
    <id>dev.karmakrafts.jbpl.intellij</id>
    <name>Java Bytecode Patch Language</name>
    <vendor>Karma Krafts</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="JBPL"
                language="JBPL"
                implementationClass="dev.karmakrafts.jbpl.intellij.JBPLFileType"
                fieldName="INSTANCE"
                extensions="jbpl"/>
        <iconProvider implementation="dev.karmakrafts.jbpl.intellij.JBPLIconProvider"/>
        <lang.parserDefinition language="JBPL"
                               implementationClass="dev.karmakrafts.jbpl.intellij.JBPLParserDefinition"/>
        <lang.syntaxHighlighterFactory language="JBPL"
                                       implementationClass="dev.karmakrafts.jbpl.intellij.JBPLSyntaxHighlighterFactory"/>
        <annotator language="JBPL"
                   implementationClass="dev.karmakrafts.jbpl.intellij.JBPLAnnotator"/>
    </extensions>
</idea-plugin>