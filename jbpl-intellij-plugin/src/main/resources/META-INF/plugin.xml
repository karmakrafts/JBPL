<idea-plugin>
    <id>dev.karmakrafts.jbpl</id>
    <name>Java Bytecode Patch Language</name>
    <vendor email="support@karmakrafts.dev" url="https://karmakrafts.dev">Karma Krafts</vendor>

    <description>
        <![CDATA[
        Syntax highlighting, completion and IDE integration for the Java Bytecode Patch Language.
        ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends optional="true" config-file="dependencies/copyright.xml">com.intellij.copyright</depends>
    <idea-version since-build="223"/>

    <resource-bundle>messages.JBPL</resource-bundle>

    <actions>
        <action id="jbpl_create_file"
                class="dev.karmakrafts.jbpl.intellij.action.CreateJBPLFileAction">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>
    </actions>
    <!-- @formatter:off -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="JBPL"
                language="JBPL"
                implementationClass="dev.karmakrafts.jbpl.intellij.JBPLFileType"
                fieldName="INSTANCE"
                extensions="jbpl"/>
        <lang.parserDefinition language="JBPL" implementationClass="dev.karmakrafts.jbpl.intellij.lang.JBPLParserDefinition"/>
        <lang.syntaxHighlighterFactory language="JBPL" implementationClass="dev.karmakrafts.jbpl.intellij.lang.JBPLSyntaxHighlighterFactory"/>
        <lang.braceMatcher language="JBPL" implementationClass="dev.karmakrafts.jbpl.intellij.lang.JBPLBraceMatcher"/>
        <lang.psiStructureViewFactory language="JBPL" implementationClass="dev.karmakrafts.jbpl.intellij.structview.JBPLStructureViewFactory"/>
        <lang.commenter language="JBPL" implementationClass="dev.karmakrafts.jbpl.intellij.lang.JBPLCommenter"/>
        <completion.contributor language="JBPL" implementationClass="dev.karmakrafts.jbpl.intellij.completion.JBPLCompletionContributor"/>
        <codeInsight.lineMarkerProvider language="JBPL" implementationClass="dev.karmakrafts.jbpl.intellij.insight.JBPLLineMarkerProvider"/>
        <annotator language="JBPL" implementationClass="dev.karmakrafts.jbpl.intellij.lang.JBPLAnnotator"/>
        <iconProvider implementation="dev.karmakrafts.jbpl.intellij.JBPLIconProvider"/>
        <navbar implementation="dev.karmakrafts.jbpl.intellij.navigation.JBPLStructureAwareNavBarModelExtension"/>
        <gotoDeclarationHandler implementation="dev.karmakrafts.jbpl.intellij.insight.JBPLGoToDeclarationHandler"/>
    </extensions>
    <!-- @formatter:on -->
</idea-plugin>